{
  "name": "flux-tweets",
  "version": "0.0.0",
  "description": "Realtime Twitter stream with ReactJS and Flux",
  "author": "Andrea Pavoni",
  "license": "MIT",
  "dependencies": {
    "coffee-script": "^1.8.0",
    "coffee-react": "~2.0.0",
    "express": "~4.10.1",
    "express-handlebars": "*",
    "underscore": "^1.7.0",
    "socket.io": "^1.1.0",
    "ntwitter": "^0.5.0",
    "flux": "^2.0.0",
    "react": "^0.12.0",
    "dotenv": "~0.4.0",
    "mongoose": "*"
  },
  "devDependencies": {
    "coffee-reactify": "^2.0.0",
    "browserify": "~6.2.0",
    "watchify": "~2.1.0"
  },
  "scripts": {
    "watch": "watchify app.coffee -o public/js/bundle.js -v",
    "browserify": "./node_modules/.bin/browserify app -t coffee-reactify --extension='.coffee' -o public/js/bundle.js",
    "build": "npm run browserify",
    "dev": "npm run watch & npm start",
    "start": "coffee ./bin/www"
  }
}
